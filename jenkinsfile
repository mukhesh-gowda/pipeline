pipeline {
  agent any
    stages {
      stage ('BUILD') {
        steps {
         sh '''
           sleep 5
           echo "This is build stage"
            '''
        }
    }
  stage ('DEPLOY') {
    steps {
     sh '''
     sleep 5
     echo "This is deploy stage"
      '''
     }
  }
       stage ('TEST') {
        steps {
         sh '''
           sleep 5
           echo "This is test stage"
            '''
        }
    }
  }
